@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header class="bg-dark text-white shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark container">

            <a class="navbar-brand fw-bold" asp-page="/Index">🍽 Restaurant</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Главная</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Menu/Index">Меню</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Orders/Index">Заказы</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Index">Админ</a>
                    </li>

                </ul>

                <partial name="_LoginPartial" />
            </div>

        </nav>
    </header>

    <main class="flex-grow-1 container py-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-auto border-top">
        <small>© 2025 — Restaurant System</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
